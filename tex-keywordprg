#!/usr/bin/python3
# -*- coding: utf-8 -*-

# Copyright Â© 2013 Martin Ueding <dev@martin-ueding.de>

"""
This will find the LaTeX documentation for a given package.

You can use this as a keywordprg in Vim, so that you can move the cursor over
``package`` in ``\includepackage{package}`` and press ``K``. Then, it will
search for ``package.pdf`` on your disk and open it in your default PDF viewer.
"""

import argparse
import subprocess
import sys

__docformat__ = "restructuredtext en"

def main():
    options = _parse_args()

    keyword = options.keyword[0]

    try:
        command = ["locate", "-b", r"\{0}.pdf".format(keyword)]
        findings = subprocess.check_output(command).split(b"\n")
        subprocess.check_call(["xdg-open", findings[0]])
    except subprocess.CalledProcessError as e:
        print(e)
        sys.exit(1)

def _parse_args():
    """
    Parses the command line arguments.

    :return: Namespace with arguments.
    :rtype: Namespace
    """
    parser = argparse.ArgumentParser(description="")
    parser.add_argument("keyword", metavar="keyword", type=str, nargs=1, help="Package name or keyword")

    return parser.parse_args()

if __name__ == "__main__":
    main()
